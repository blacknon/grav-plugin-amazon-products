<div class="amzn-box">
    <div class="amzn-image">
        <a href="{{ amazon_url }}" target="_blank" rel="nofollow">
          <img src="{{ amazon_image }}" height="160" alt="{{ amazon_title }}"></a>
        <a href="{{ amazon_url }}" target="_blank" rel="nofollow">
        </a>
    </div>
    <div class="amzn-content">
        <p class="amzn-title">
            <a href="{{ amazon_url }}" target="_blank" rel="nofollow">
                {{ amazon_title }}
            </a>
        </p>
        <ul class="amzn-desc">
            <li>
                {{'PLUGIN_AMAZON_PRODUCTS.BOOK.PRICE'|t}}&nbsp;<span class="amzn-price">{{ amazon_price }}</span> &nbsp; ({{ amazon_date }})
            </li>
            {% if amazon_author %}
            <li>
                {{'PLUGIN_AMAZON_PRODUCTS.BOOK.AUTHOR'|t}}&nbsp;{{ amazon_author }}
            </li>
            {% endif %}
            {% if amazon_publisher %}
            <li>
                {{'PLUGIN_AMAZON_PRODUCTS.BOOK.PUBLISHER'|t}}&nbsp;{{ amazon_publisher }}
            </li>
            {% endif %}
            {% if amazon_publicationDate %}
            <li>
                {{'PLUGIN_AMAZON_PRODUCTS.BOOK.PUBLICATION_DATE'|t}}&nbsp;{{ amazon_publicationDate }}
            </li>
            {% endif %}
        </ul>
    </div>
</div>